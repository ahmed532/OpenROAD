
Header:
  version: "1.0"
  unit: "micron"
  precision: 2000
  include:
    - base_chip.3dbv
    - stack_chip.3dbv

Design:
  name: "HardZTop"

ChipletInst:
  base_inst:
    reference: BaseChip
  stack_inst:
    reference: StackChip

Stack:
  base_inst:
    loc: [0.0, 0.0]
    z: 0.0
    orient: R0
  stack_inst:
    loc: [1000.0, 1000.0]
    z: 200.0
    orient: R0

Connection:
  z_conn:
    top: stack_inst.regions.r1
    bot: base_inst.regions.r1
    thickness: 0.0
